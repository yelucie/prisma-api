extends layout

block content
  div(class='px-6 py-24 bg-white isolate sm:py-32 lg:px-8')
    div(class='max-w-2xl mx-auto text-center')
      h2(class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl")
        if genre
          | #{genre.label}
        else
          | Add a new genre
    form(method='POST' action= genre ? `/genres/${genre.id}/edit` : '/genres/add' class='max-w-xl mx-auto mt-16 sm:mt-20')
      div(class='grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2')
        div(class='sm:col-span-2')
          label(for='label' class="block text-sm font-semibold leading-6 text-gray-900") Label
          div(class='mt-2.5')
            input(type='text' name='label' placeholder= genre ? "" : 'Label' value= genre ? genre.label : "" required class='block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
      div(class='mt-10')
        button(type='submit' class='block w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600') 
          if genre
            | Edit the genre
          else
            | Add
  footer(class="bottom-0 w-full px-6 pt-8 pb-8 mx-auto border-t border-gray-900/10 max-w-7xl lg:px-8")
