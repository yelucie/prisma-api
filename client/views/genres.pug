extends layout

block content
  div(class="px-6 py-24 bg-white isolate sm:py-32 lg:px-8")
    div(class="text-center")
      h2(class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl")= title
      button(class="rounded-md bg-indigo-600 mt-8 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600")
        a(href='/genres/add') Add a new genre
    div(class="max-w-xl mx-auto mt-10 sm:mt-20")
      if genres.length > 0
        ul(class="divide-y divide-gray-100")
          each val in genres 
            li(data-genres.id=val.id class="relative flex justify-between py-5")
              div(class="flex pr-6 gap-x-4 sm:w-1/2 sm:flex-none")
                div(class="flex-auto min-w-0")
                  p(class="text-sm font-semibold leading-6 text-gray-900") #{val.label}
              div(class="flex items-center flex-none gap-x-4")
                a(href=`/genres/${val.id}` class="px-3 py-2.5 text-sm shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 hidden rounded-md bg-white font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:block") View details
  footer(class="bottom-0 w-full px-6 pt-8 pb-8 mx-auto border-t border-gray-900/10 max-w-7xl lg:px-8")
