extends layout

block content
  div(class='px-6 py-24 bg-white isolate sm:py-32 lg:px-8')
    div(class='max-w-2xl mx-auto text-center')
      h2(class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl")
        if book
          | #{book.title}
        else
          | Add a new book
    form(method='POST' action= book ? `/books/${book.id}/edit` : '/books/add' class='max-w-xl mx-auto mt-16 sm:mt-20')
      div(class='grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2')
        div(class='sm:col-span-2')
          label(for='title' class="block text-sm font-semibold leading-6 text-gray-900") Title
          div(class='mt-2.5')
            input(type='text' name='title' placeholder= book ? "" : 'Title' value= book ? book.title : "" required class='block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
        div(class='sm:col-span-2')
          label(for='notes' class='block text-sm font-semibold leading-6 text-gray-900') Description
          div(class='mt-2.5')
            textarea(name='description' placeholder= book ? "" : 'Enter description' rows='4' class='block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6')
              if book
                | #{book.description}
        div(class='sm:col-span-2')
          label(for="author", class="block text-sm font-medium leading-6 text-gray-900") Author
          select#location(name="author" class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6")
            each author in authors
              option(value=author.id)= author.firstname + ' ' + author.lastname
      div(class='mt-10')
        button(type='submit' class='block w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600') 
          if book
            | Edit the book
          else
            | Add
  footer(class="bottom-0 w-full px-6 pt-8 pb-8 mx-auto border-t border-gray-900/10 max-w-7xl lg:px-8")
