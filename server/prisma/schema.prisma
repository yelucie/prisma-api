generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model author {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstname String? @db.String(255)
  lastname  String? @db.String(255)
  country   String? @db.String(255)
  books     books[]
}

model book_genre {
  book_id  String @db.Uuid
  genre_id String @db.Uuid
  books    books  @relation(fields: [book_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  genre    genre  @relation(fields: [genre_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@id([book_id, genre_id])
}

model books {
  id          String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String?      @db.String(255)
  description String?
  author_id   String?      @db.Uuid
  book_genre  book_genre[]
  author      author?      @relation(fields: [author_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "author_id_fkey")
}

model genre {
  id         String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  label      String?      @db.String(255)
  book_genre book_genre[]
}
